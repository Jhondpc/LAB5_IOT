<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="277dp"
        android:layout_height="114dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="PROGRAMA DE TUTORÍAS"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.23" />

    <Button
        android:id="@+id/buttonTrabajador"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="Trabajador"
        android:textColor="#CA603F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#0E0D0D"
        app:layout_constraintEnd_toEndOf="@+id/buttonTutor"
        app:layout_constraintStart_toStartOf="@+id/buttonTutor"
        app:layout_constraintTop_toBottomOf="@+id/buttonTutor" />


    <Button
        android:id="@+id/buttonTutor"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:text="Tutor"
        android:backgroundTint="#FFFFFF"
        android:textColor="#CA603F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#020202"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:rippleColor="#040303"
        tools:layout_editor_absoluteY="458dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Laboratorio 5 - IOT"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>