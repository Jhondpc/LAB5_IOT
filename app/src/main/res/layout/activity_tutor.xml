<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3A488"
    tools:context=".tutor.TutorActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="FLUJO TUTOR"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDescargarListaTrabajadores"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#FFFFFF"
        android:text="Lista de Trabajadores"
        android:textColor="#CA603F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#020202"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnBuscarTrabajador"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Buscar Trabajador"
        android:backgroundTint="#FFFFFF"
        android:textColor="#CA603F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#020202"
        app:layout_constraintEnd_toEndOf="@+id/btnDescargarListaTrabajadores"
        app:layout_constraintStart_toStartOf="@+id/btnDescargarListaTrabajadores"
        app:layout_constraintTop_toBottomOf="@+id/btnDescargarListaTrabajadores" />


    <Button
        android:id="@+id/btnAsignarTutoria"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:text="Asignar TutorÃ­a"
        android:backgroundTint="#FFFFFF"
        android:textColor="#CA603F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#020202"
        app:layout_constraintEnd_toEndOf="@+id/btnBuscarTrabajador"
        app:layout_constraintStart_toStartOf="@+id/btnBuscarTrabajador"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarTrabajador" />


</androidx.constraintlayout.widget.ConstraintLayout>